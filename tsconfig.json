{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "declaration": false,
        "noImplicitAny": true,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": false,
        "suppressImplicitAnyIndexErrors": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "lib": [
            "ES2017",
            "WebWorker",
            "DOM"
        ],
        "types": []
    },
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "src/**/*.ts",
        "lib/**/*.ts"
    ],
    "files": [
        "src/Constants.ts",
        "src/ecs/AssemblageData.ts",
        "src/ecs/AssemblageData/Tile.ts",
        "src/ecs/Components/Component.ts",
        "src/ecs/Components/ComponentUtils.ts",
        "src/ecs/Components/ConstantPosition.ts",
        "src/ecs/Components/Floor.ts",
        "src/ecs/Components/Health.ts",
        "src/ecs/Components/index.ts",
        "src/ecs/Components/KeyboardControlled.ts",
        "src/ecs/Components/Movement.ts",
        "src/ecs/Components/Renderable.ts",
        "src/ecs/Components/Storage.ts",
        "src/ecs/Components/Tile.ts",
        "src/ecs/Components/TileReference.ts",
        "src/ecs/Components/Vision.ts",
        "src/ecs/Components/Wall.ts",
        "src/ecs/Entity.ts",
        "src/ecs/EntityManager.ts",
        "src/ecs/Systems/index.ts",
        "src/ecs/Systems/KeyboardControlSystem.ts",
        "src/ecs/Systems/MovementSystem.ts",
        "src/ecs/Systems/RenderSystem.ts",
        "src/ecs/Systems/System.ts",
        "src/Engine.ts",
        "src/EngineWorker.ts",
        "src/Enum.ts",
        "src/Game.ts",
        "src/Grid.ts",
        "src/index.d.ts",
        "src/ItemName.ts",
        "src/KeyboardInput.ts",
        "src/KeyConfig.ts",
        "src/main.ts",
        "src/MapGeneration.ts",
        "src/MessageLog.ts",
        "src/Options.ts",
        "src/Random.ts",
        "src/Renderer.ts",
        "src/SceneManager.ts",
        "src/TileMap.ts",
        "src/UIState/Actions.ts",
        "src/UIState/index.ts",
        "src/UIState/Reducers.ts",
        "src/UIState/Store.ts",
        "src/WorkerWrapper.ts",
        "lib/mersenne-twister.ts",
        "src/maps/index.ts",
        "src/maps/index.d.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": true
    }
}
